{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Micro form generator",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the block"
        },
        "repeat": {
            "description": "Boolean value to make the block repetable",
            "type": "boolean"
        },
        "inputs": {
            "description": "The array of inputs to render",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "description": "The input type to generate. values can be: text, password, textarea",
                        "type": "string"
                    },
                    "id": {
                        "description": "The id attribute of the input",
                        "type": "string"
                    },
                    "for": {
                        "description": "The for attribute of the input",
                        "type": "string"
                    },
                    "name": {
                        "description": "The name attribute of the input",
                        "type": "string"
                    },
                    "label": {
                        "description": "The label attribute of the input",
                        "type": "string"
                    },
                    "placeholder": {
                        "description": "The placeholder attribute of the input",
                        "type": "string"
                    },
                    "value": {
                        "description": "The value attribute of the input",
                        "type": "string"                        
                    },
                    "options": {
                        "description": "An array of key, value attribute of the input",
                        "type": "object"
                    },            
                    "repeat": {
                        "description": "Boolean value to make the input repetable",
                        "type": "boolean"
                    }
                },
                "required": [
                    "name"
                ]
            }
        }
    }
}